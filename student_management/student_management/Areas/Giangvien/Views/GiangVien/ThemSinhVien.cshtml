@model student_management.Models.ViewModels.DanhSachChonSVViewModel
@{
    ViewData["Title"] = "Chọn sinh viên để thêm";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">👥 Chọn sinh viên để thêm vào lớp @Model.MaLHP</h3>
        <a asp-area="GiangVien"
           asp-controller="GiangVien"
           asp-action="DanhSachSinhVien"
           asp-route-maLHP="@Model.MaLHP"
           class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <form asp-action="ThemSinhVien" method="post" asp-area="GiangVien" asp-controller="GiangVien">
        <input type="hidden" asp-for="MaLHP" />

        @if (Model.SinhViens == null || !Model.SinhViens.Any())
        {
            <div class="alert alert-info">Tất cả sinh viên đã ở trong lớp này.</div>
        }
        else
        {
            <table class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:5%;">#</th>
                        <th>Mã SV</th>
                        <th>Họ tên</th>
                        <th style="width:10%;" class="text-center">Chọn</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.SinhViens.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.SinhViens[i].MaSV</td>
                            <td>@Model.SinhViens[i].HoTen</td>
                            <td class="text-center">
                                <input asp-for="SinhViens[@i].DaChon" class="form-check-input" />
                                <input type="hidden" asp-for="SinhViens[@i].MaSV" />
                                <input type="hidden" asp-for="SinhViens[@i].HoTen" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end mt-3">
                <button type="submit" class="btn btn-success px-4 py-2">
                    <i class="bi bi-person-check me-1"></i> Thêm các sinh viên đã chọn
                </button>
            </div>
        }
    </form>
</div>
