@model student_management.Models.ViewModels.DiemDanhViewModel
@{
    ViewData["Title"] = "Danh sách sinh viên – " + @Model.TenLHP;
}

<div class="container-fluid mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách sinh viên: @Model.TenLHP</h5>
            <div>
                <a asp-area="GiangVien" asp-controller="GiangVien" asp-action="ThemSinhVien"
                   asp-route-maLHP="@Model.MaLHP"
                   class="btn btn-light btn-sm me-2">
                    <i class="bi bi-person-plus"></i> Thêm sinh viên
                </a> <a asp-area="GiangVien" asp-controller="GiangVien" asp-action="DiemDanh"
                        asp-route-maLHP="@Model.MaLHP"
                        class="btn btn-success btn-sm me-2">
                    <i class="bi bi-check2-circle"></i> Điểm danh
                </a><a class="btn btn-warning me-2"
                       asp-area="GiangVien"
                       asp-controller="GiangVien"
                       asp-action="NhapDiem"
                       asp-route-maLHP="@Model.MaLHP">
                    🧮 Nhập điểm
                </a>
                <a class="btn btn-info"
                   asp-area="GiangVien"
                   asp-controller="GiangVien"
                   asp-action="ThongKeDiemDanh"
                   asp-route-maLHP="@Model.MaLHP">
                    📊 Thống kê điểm danh
                </a>
                <a asp-area="GiangVien" asp-controller="GiangVien" asp-action="LopHocPhanCuaToi"
                   class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                
            </div>
        </div>

        <div class="card-body p-0">
            @if (Model.SinhViens.Any())
            {
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th style="width: 70px;">STT</th>
                            <th>Mã sinh viên</th>
                            <th>Họ và tên</th>
                            <th style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.SinhViens.Count; i++)
                        {
                            var sv = Model.SinhViens[i];
                            <tr class="align-middle">
                                <td class="text-center fw-semibold">@(@i + 1)</td>
                                <td>@sv.MaSV</td>
                                <td>@sv.HoTen</td>
                                <td class="text-center">
                                    <form asp-action="XoaDangKy" asp-controller="GiangVien" asp-area="GiangVien" method="post" style="display:inline;">
                                        <input type="hidden" name="MaLHP" value="@Model.MaLHP" />
                                        <input type="hidden" name="MaSV" value="@sv.MaSV" />
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Bạn có chắc muốn xóa sinh viên này khỏi lớp không?');">
                                            <i class="bi bi-trash"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    Không có sinh viên nào trong lớp này.
                </div>
            }
        </div>
    </div>
</div>
