@model student_management.Models.ViewModels.ThongBaoGuiViewModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-bell-fill me-2"></i>Gửi thông báo cho lớp</h4>
                </div>

                <div class="card-body">
                    <form asp-action="GuiThongBao" method="post">
                        <input type="hidden" asp-for="MaLHP" />

                        <div class="mb-3">
                            <label asp-for="TieuDe" class="form-label fw-bold">Tiêu đề</label>
                            <input asp-for="TieuDe" class="form-control" placeholder="Nhập tiêu đề thông báo..." />
                            <div class="form-text">Tiêu đề nên ngắn gọn, súc tích.</div>
                            <span asp-validation-for="TieuDe" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NoiDung" class="form-label fw-bold">Nội dung</label>
                            <textarea asp-for="NoiDung" class="form-control" rows="6" placeholder="Nhập nội dung chi tiết thông báo..."></textarea>
                            <div class="form-text">Nội dung thông báo sẽ gửi tới tất cả sinh viên trong lớp.</div>
                            <span asp-validation-for="NoiDung" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send-fill me-1"></i> Gửi thông báo
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-muted text-center mt-3">
                <small><i class="bi bi-info-circle me-1"></i>Lưu ý: Thông báo sẽ được gửi đến tất cả sinh viên trong lớp.</small>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 18px rgba(0,0,0,0.1);
    }
</style>
