@model student_management.Models.ViewModels.DiemDanhViewModel
@{
    ViewData["Title"] = "Điểm danh – " + @Model.TenLHP;
}

<div class="container mt-4">
    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">✅ Điểm danh: @Model.TenLHP</h5>
            <a asp-area="GiangVien" asp-controller="GiangVien" asp-action="DanhSachSinhVien"
               asp-route-maLHP="@Model.MaLHP"
               class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>

        <form asp-area="GiangVien" asp-action="DiemDanh" asp-controller="GiangVien" method="post">
            <input type="hidden" name="MaLHP" value="@Model.MaLHP" />
            <div class="card-body p-0">
                <table class="table table-hover mb-0 align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>STT</th>
                            <th>Mã SV</th>
                            <th>Họ tên</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.SinhViens.Count; i++)
                        {
                            <tr>
                                <td>@(@i + 1)</td>
                                <td>@Model.SinhViens[i].MaSV</td>
                                <td>@Model.SinhViens[i].HoTen</td>
                                <td>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio"
                                               asp-for="SinhViens[@i].TrangThai" value="Có mặt" />
                                        <label class="form-check-label">Có mặt</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio"
                                               asp-for="SinhViens[@i].TrangThai" value="Vắng" />
                                        <label class="form-check-label">Vắng</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio"
                                               asp-for="SinhViens[@i].TrangThai" value="Muộn" />
                                        <label class="form-check-label">Muộn</label>
                                    </div>

                                    <input type="hidden" asp-for="SinhViens[@i].MaSV" />
                                    <input type="hidden" asp-for="SinhViens[@i].HoTen" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer text-end">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save"></i> Lưu điểm danh
                </button>
            </div>
        </form>
    </div>
</div>
