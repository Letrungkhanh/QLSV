@model student_management.Models.GiaoVien

@{
    ViewData["Title"] = "Hồ sơ giảng viên";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-person-circle me-2"></i>Hồ sơ giảng viên</h4>
                </div>

                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <img src="@(Model.Anh ?? "/uploads/default-avatar.png")"
                             class="rounded-circle shadow-sm border border-3 border-light"
                             alt="Ảnh giảng viên"
                             style="width: 120px; height: 120px; object-fit: cover;">

                    </div>

                    <table class="table table-borderless mb-4">
                        <tbody>
                            <tr>
                                <th class="text-muted" width="40%">Mã giảng viên:</th>
                                <td>@Model.MaGv</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Họ và tên:</th>
                                <td>@Model.HoTen</td>
                            </tr>
                           
                            <tr>
                                <th class="text-muted">Ngày sinh:</th>
                                <td>@Model.NgaySinh?.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Email:</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Số điện thoại:</th>
                                <td>@Model.SoDienThoai</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Khoa:</th>
                                <td>@Model.MaKhoaNavigation?.TenKhoa</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.MaGv"
                           class="btn btn-outline-primary px-4">
                            <i class="bi bi-pencil-square me-2"></i>Chỉnh sửa
                        </a>

                        <a asp-area="Giangvien" asp-controller="Home" asp-action="Index"
                           class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional: thêm icon Bootstrap nếu chưa có -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
