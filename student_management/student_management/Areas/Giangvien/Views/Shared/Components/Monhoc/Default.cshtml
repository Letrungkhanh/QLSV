@model IEnumerable<dynamic>
@foreach (var c in Model.Take(3))
{
    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
        <div class="course-item bg-light">
            <div class="position-relative overflow-hidden">
                <div class="position-relative overflow-hidden d-flex align-items-center justify-content-center bg-primary" style="height: 200px;">
                    <i class="fa fa-book fa-4x text-white"></i>
                </div>

                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                    <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Đọc thêm</a>
                    <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Tham gia ngay</a>
                </div>
            </div>
            <div class="text-center p-4 pb-0">


                <h5 class="mb-4">@c.TenLhp</h5>
            </div>
            <div class="d-flex border-top">
                <small class="flex-fill text-center border-end py-2">
                    <i class="fa fa-user-tie text-primary me-2"></i>@c.TenGv
                </small>
                <small class="flex-fill text-center border-end py-2">
                    <i class="fa fa-clock text-primary me-2"></i>@c.SoTinChi tín chỉ
                </small>
                <small class="flex-fill text-center py-2">
                    <i class="fa fa-user text-primary me-2"></i>@c.SiSoHienTai SV
                </small>
            </div>

        </div>
    </div>
}