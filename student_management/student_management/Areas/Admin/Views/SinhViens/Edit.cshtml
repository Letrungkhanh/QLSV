@model student_management.Models.GiaoVien

<h2>Thông tin cá nhân</h2>
<table class="table table-bordered">
    <tr><th>Mã GV</th><td>@Model.MaGv</td></tr>
    <tr><th>Họ tên</th><td>@Model.HoTen</td></tr>
    <tr><th>Email</th><td>@Model.Email</td></tr>
    <tr><th>Điện thoại</th><td>@Model.SoDienThoai</td></tr>
    <tr><th>Khoa</th><td>@Model.MaKhoaNavigation?.TenKhoa</td></tr>
</table>

<a asp-action="Edit" class="btn btn-primary">Chỉnh sửa</a>
<a asp-action="ChangePassword" class="btn btn-warning">Đổi mật khẩu</a>
