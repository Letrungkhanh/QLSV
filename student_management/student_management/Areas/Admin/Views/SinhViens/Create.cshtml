@model student_management.Models.SinhVien

@{
    ViewData["Title"] = "Thêm sinh viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>Thêm sinh viên mới</h1>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Thông tin sinh viên</h3>
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="MaSv">Mã sinh viên</label>
                            <input asp-for="MaSv" class="form-control" />
                            <span asp-validation-for="MaSv" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="HoTen">Tên sinh viên</label>
                            <input asp-for="HoTen" class="form-control" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="AnhFile">Ảnh sinh viên</label>
                            <input type="file" name="AnhFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="form-group">
                            <label asp-for="NgaySinh">Ngày sinh</label>
                            <input asp-for="NgaySinh" type="date" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="SoDienThoai">Số điện thoại</label>
                            <input asp-for="SoDienThoai" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="MaKhoa">Khoa</label>
                            <select asp-for="MaKhoa" asp-items="ViewBag.MaKhoa" class="form-control"></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="MaLop">Lớp</label>
                            <select asp-for="MaLop" asp-items="ViewBag.MaLop" class="form-control"></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="NamNhapHoc">Năm nhập học</label>
                            <input asp-for="NamNhapHoc" class="form-control" />
                        </div>
                    </div>

                    <div class="card-footer">
                        <input type="submit" value="Thêm mới" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
