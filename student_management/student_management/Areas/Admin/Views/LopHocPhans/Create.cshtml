@model student_management.Models.LopHocPhan

@{
    ViewData["Title"] = "Thêm mới Lớp học phần";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Tạo lớp học phần mới</h3>
                        </div>

                        <form asp-action="Create" method="post">
                            <div class="card-body">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="TenLhp" class="control-label"></label>
                                    <input asp-for="TenLhp" class="form-control" placeholder="Nhập tên lớp học phần..." />
                                    <span asp-validation-for="TenLhp" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="MaMh" class="control-label"></label>
                                    <select asp-for="MaMh" class="form-control" asp-items="ViewBag.MonHocList">
                                        <option value="">-- Chọn môn học --</option>
                                    </select>
                                    <span asp-validation-for="MaMh" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="MaGv" class="control-label"></label>
                                    <select asp-for="MaGv" class="form-control" asp-items="ViewBag.GiaoVienList">
                                        <option value="">-- Chọn giảng viên --</option>
                                    </select>
                                    <span asp-validation-for="MaGv" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="HocKy" class="control-label"></label>
                                    <input asp-for="HocKy" class="form-control" type="number" min="1" max="3" placeholder="Nhập học kỳ (1,2,3)" />
                                    <span asp-validation-for="HocKy" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="NamHoc" class="control-label"></label>
                                    <input asp-for="NamHoc" class="form-control" placeholder="Ví dụ: 2024-2025" />
                                    <span asp-validation-for="NamHoc" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="SiSoToiDa" class="control-label"></label>
                                    <input asp-for="SiSoToiDa" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="SiSoToiDa" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="card-footer">
                                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
