@model student_management.Models.LopHocPhan

@{
    ViewData["Title"] = "Chi tiết lớp học phần";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Chi tiết lớp học phần</h1>
    </section>

    <section class="content">
        <div class="card card-info">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Tên lớp học phần:</dt>
                    <dd class="col-sm-9">@Model.TenLhp</dd>

                    <dt class="col-sm-3">Học kỳ:</dt>
                    <dd class="col-sm-9">@Model.HocKy</dd>

                    <dt class="col-sm-3">Trạng thái:</dt>
                    <dd class="col-sm-9">@Model.TrangThai</dd>

                    <dt class="col-sm-3">Năm học:</dt>
                    <dd class="col-sm-9">@Model.NamHoc</dd>

                    <dt class="col-sm-3">Sĩ số tối đa:</dt>
                    <dd class="col-sm-9">@Model.SiSoToiDa</dd>

                    <dt class="col-sm-3">Sĩ số hiện tại:</dt>
                    <dd class="col-sm-9">@Model.SiSoHienTai</dd>

                    <dt class="col-sm-3">Giảng viên:</dt>
                    <dd class="col-sm-9">@Model.MaGvNavigation?.HoTen</dd>

                    <dt class="col-sm-3">Môn học:</dt>
                    <dd class="col-sm-9">@Model.MaMhNavigation?.TenMh</dd>
                </dl>

                <h4>Danh sách sinh viên đăng ký</h4>
                @if (Model.DangKyHocs.Any())
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>MSV</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dk in Model.DangKyHocs)
                            {
                                <tr>
                                    <td>@dk.MaSvNavigation?.MaSv</td>
                                    <td>@dk.MaSvNavigation?.HoTen</td>
                                    <td>@dk.MaSvNavigation?.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Chưa có sinh viên đăng ký.</p>
                }

                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.MaLhp" class="btn btn-primary">Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </section>
</div>
