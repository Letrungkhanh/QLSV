@model IEnumerable<student_management.Models.LopHocPhan>

@{
    ViewData["Title"] = "Quản lý lớp học phần";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý lớp học phần</h1>
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                            <strong>Lỗi:</strong> @TempData["Error"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
                            <strong>Thành công:</strong> @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                </div>
                <div class="col-sm-6 text-right">
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Thêm lớp học phần
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-bordered text-center">
                                <thead class="thead-dark">
                                    <tr>
                                        <th style="width: 3%">Mã LHP</th>
                                        <th style="width: 15%">Tên lớp học phần</th>
                                        <th style="width: 15%">Môn học</th>
                                        <th style="width: 15%">Giảng viên</th>
                                        <th style="width: 5%">Sĩ số hiện tại</th>
                                        <th style="width: 5%">Sĩ số tối đa</th>
                                        <th style="width: 10%">Học kỳ</th>
                                        <th style="width: 10%">Năm học</th>
                                        <th style="width: 22%">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.MaLhp</td>
                                                <td>@item.TenLhp</td>
                                                <td>@item.MaMhNavigation?.TenMh</td>
                                                <td>@item.MaGvNavigation?.HoTen</td>
                                                <td>@item.SiSoHienTai</td>
                                                <td>@item.SiSoToiDa</td>
                                                <td>@item.HocKy</td>
                                                <td>@item.NamHoc</td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.MaLhp" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-edit"></i> Sửa
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@item.MaLhp" class="btn btn-info btn-sm">
                                                        <i class="fas fa-info-circle"></i> Chi tiết
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.MaLhp" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i> Xóa
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center text-muted">
                                                Chưa có lớp học phần nào.
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
