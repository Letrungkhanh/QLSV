@model student_management.Models.MonHoc

@{
    ViewData["Title"] = "Thêm học phần";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Thêm học phần</h1>
    </section>

    <section class="content">
        <div class="card card-primary">
            <div class="card-header"><h3 class="card-title">Thông tin học phần</h3></div>

            <!-- ✅ Thêm enctype để upload file -->
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="MaMh" class="control-label">Mã học phần</label>
                        <input asp-for="MaMh" class="form-control" placeholder="Nhập mã học phần..." />
                        <span asp-validation-for="MaMh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaMh" class="control-label">Môn học</label>
                        <select asp-for="MaMh" class="form-control" asp-items="ViewBag.MonHocList">
                            <option value="">-- Chọn môn học --</option>
                        </select>
                        <span asp-validation-for="MaMh" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SoTinChi" class="control-label">Số tín chỉ</label>
                        <input asp-for="SoTinChi" class="form-control" placeholder="Nhập số tín chỉ..." />
                        <span asp-validation-for="SoTinChi" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Anh" class="control-label">Ảnh minh họa</label>
                        <input type="file" name="uploadAnh" class="form-control" />
                        <span asp-validation-for="Anh" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MaKhoa" class="control-label">Khoa</label>
                        <select asp-for="MaKhoa" class="form-control" asp-items="ViewBag.MaKhoa">
                            <option value="">-- Vui lòng chọn khoa --</option>
                        </select>
                        <span asp-validation-for="MaKhoa" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <input type="submit" value="Thêm mới" class="btn btn-info" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
