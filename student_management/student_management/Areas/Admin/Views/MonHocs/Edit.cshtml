@model student_management.Models.MonHoc

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Chỉnh sửa học phần</h1>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Chỉnh sửa học phần</h3>
                        </div>

                        <!-- ✅ Thêm enctype để upload file -->
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="MaMh" class="control-label">Mã học phần</label>
                                    <input asp-for="MaMh" class="form-control" readonly />
                                    <span asp-validation-for="MaMh" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="TenMh" class="control-label">Tên học phần</label>
                                    <input asp-for="TenMh" class="form-control" placeholder="Nhập tên học phần..." />
                                    <span asp-validation-for="TenMh" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="SoTinChi" class="control-label">Số tín chỉ</label>
                                    <input asp-for="SoTinChi" class="form-control" placeholder="Nhập số tín chỉ..." />
                                    <span asp-validation-for="SoTinChi" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="MaKhoa" class="control-label">Khoa</label>
                                    <select asp-for="MaKhoa" class="form-control" asp-items="ViewBag.MaKhoa">
                                        <option value="">-- Vui lòng chọn khoa --</option>
                                    </select>
                                    <span asp-validation-for="MaKhoa" class="text-danger"></span>
                                </div>

                                <!-- ✅ Phần ảnh -->
                                <div class="form-group">
                                    <label>Ảnh hiện tại:</label><br />
                                    @if (!string.IsNullOrEmpty(Model.Anh))
                                    {
                                        <img src="@Model.Anh" alt="Ảnh học phần" width="150" class="img-thumbnail mb-2" />
                                    }
                                    else
                                    {
                                        <p><i>Chưa có ảnh minh họa</i></p>
                                    }
                                </div>

                                <div class="form-group">
                                    <label>Chọn ảnh mới (nếu muốn thay đổi):</label>
                                    <input type="file" name="uploadAnh" class="form-control" />
                                </div>

                            </div>

                            <div class="card-footer">
                                <input type="submit" value="Lưu thay đổi" class="btn btn-info" />
                                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
