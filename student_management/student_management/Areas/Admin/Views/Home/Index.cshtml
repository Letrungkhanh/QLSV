@model student_management.Models.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="row" style="margin-left:250px">
    <!-- Viện -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-primary">
            <div class="inner">
                <h3>@Model.TongVien</h3>
                <p>Viện</p>
            </div>
            <div class="icon"><i class="fas fa-school"></i></div>
            <a href="/Admin/Viens/Index" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Khoa -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.TongKhoa</h3>
                <p>Khoa đào tạo</p>
            </div>
            <div class="icon"><i class="fas fa-building"></i></div>
            <a href="/Admin/Khoas/Index" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Môn học -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-secondary">
            <div class="inner">
                <h3>@Model.TongMonHoc</h3>
                <p>Học phần</p>
            </div>
            <div class="icon"><i class="fas fa-book"></i></div>
            <a href="/Admin/MonHocs" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Lớp chính quy -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.TongLopChinhQuy</h3>
                <p>Lớp chính quy</p>
            </div>
            <div class="icon"><i class="fas fa-users"></i></div>
            <a href="/Admin/LopChinhQuys/Index" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Lớp học phần -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.TongLopHocPhan</h3>
                <p>Lớp học phần</p>
            </div>
            <div class="icon"><i class="fas fa-layer-group"></i></div>
            <a href="/Admin/LopHocPhan" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Giảng viên -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.TongGiangVien</h3>
                <p>Giảng viên</p>
            </div>
            <div class="icon"><i class="fas fa-chalkboard-teacher"></i></div>
            <a href="/Admin/GiaoViens/Index" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Sinh viên -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-teal">
            <div class="inner">
                <h3>@Model.TongSinhVien</h3>
                <p>Sinh viên</p>
            </div>
            <div class="icon"><i class="fas fa-user-graduate"></i></div>
            <a href="/Admin/SinhViens/Index" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    

    <!-- Thông báo -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-pink">
            <div class="inner">
                <h3>@Model.TongThongBao</h3>
                <p>Thông báo</p>
            </div>
            <div class="icon"><i class="fas fa-bullhorn"></i></div>
            <a href="/Admin/ThongBao" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>
