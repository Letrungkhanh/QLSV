@model student_management.Models.LopChinhQuy

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h2>Chi tiết lớp: @Model.TenLop</h2>
            <p><strong>Mã lớp:</strong> @Model.MaLop</p>
            <p><strong>Khoa:</strong> @Model.MaKhoaNavigation?.TenKhoa</p>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <h4>Danh sách sinh viên</h4>

            @if (Model.SinhViens != null && Model.SinhViens.Any())
            {
                <table class="table table-striped table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Mã SV</th>
                            <th>Họ tên</th>
                            <th>Ngày sinh</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sv in Model.SinhViens)
                        {
                            <tr>
                                <td>@sv.MaSv</td>
                                <td>@sv.HoTen</td>
                                <td>@sv.NgaySinh?.ToString("dd/MM/yyyy")</td>
                                <td>@sv.Email</td>
                                <td>@sv.SoDienThoai</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Không có sinh viên nào trong lớp này.</p>
            }

            <a asp-action="Index" class="btn btn-secondary mt-3">← Quay lại danh sách lớp</a>
        </div>
    </section>
</div>