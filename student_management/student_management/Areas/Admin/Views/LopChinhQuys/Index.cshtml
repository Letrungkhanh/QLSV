@model IEnumerable<student_management.Models.LopChinhQuy>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý lớp chính quy</h1>
                </div>
                <div class="col-sm-6 text-right">
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Thêm lớp chính quy
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th style="width: 15%">Mã lớp</th>
                                        <th style="width: 35%">Tên lớp</th>
                                        <th style="width: 20%">Mã khoa</th>
                                       
                                        <th style="width: 30%">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.MaLop)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TenLop)</td>
                                            <td>@Html.DisplayFor(modelItem => item.MaKhoa)</td>
                                           
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.MaLop" class="btn btn-primary">Sửa lớp</a>
                                                <a asp-action="Delete" asp-route-id="@item.MaLop" class="btn btn-danger">Xóa lớp</a>
                                                <a asp-action="Details" asp-route-id="@item.MaLop" class="btn btn-danger">Xem chi tiết lớp</a>
                                               

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}