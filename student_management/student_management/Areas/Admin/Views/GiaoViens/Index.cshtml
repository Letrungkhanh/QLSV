@model IEnumerable<student_management.Models.GiaoVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý giảng viên</h1>
                </div>
                <div class="col-sm-6 text-right">
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Thêm giảng viên
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th style="width: 15%">Mã giảng viên</th>
                                        <th style="width: 25%">Tên giảng viên</th>
                                        <th style="width: 10%">Ảnh</th>
                                        <th style="width: 15%">Mã khoa</th>
                                        <th style="width: 35%">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.MaGv)</td>
                                            <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Anh))
                                                {
                                                    <img src="@item.Anh" alt="Ảnh giảng viên" width="80" height="80" style="object-fit:cover; border-radius:8px;" />
                                                }
                                                else
                                                {
                                                    <img src="~/images/default-avatar.png" width="80" height="80" style="object-fit:cover; border-radius:8px;" />
                                                }
                                            </td>

                                            <td>@Html.DisplayFor(modelItem => item.MaKhoa)</td>

                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.MaGv" class="btn btn-primary">Sửa thông tin</a>
                                                <a asp-action="Delete" asp-route-id="@item.MaGv" class="btn btn-danger">Xóa giảng viên</a>
                                                <a asp-action="Details" asp-route-id="@item.MaGv" class="btn btn-danger">Xem chi tiết </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}