@model student_management.Models.Khoa

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>Chi tiết khoa @Model.TenKhoa</h1>
            <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại danh sách</a>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h4>Thông tin khoa</h4>
                </div>
                <div class="card-body">
                    <p><strong>Mã khoa:</strong> @Model.MaKhoa</p>
                    <p><strong>Tên khoa:</strong> @Model.TenKhoa</p>
                    <p><strong>Thuộc viện:</strong> @Model.MaVien</p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-success text-white">
                    <h4>Danh sách lớp chính quy thuộc khoa</h4>
                </div>
                <div class="card-body table-responsive">
                    @if (Model.LopChinhQuies != null && Model.LopChinhQuies.Any())
                    {
                        <table class="table table-bordered table-striped text-center">
                            <thead>
                                <tr>
                                    <th>Mã lớp</th>
                                    <th>Tên lớp</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lop in Model.LopChinhQuies)
                                {
                                    <tr>
                                        <td>@lop.MaLop</td>
                                        <td>@lop.TenLop</td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="LopChinhQuys" asp-action="Details" asp-route-id="@lop.MaLop" class="btn btn-info">Xem chi tiết lớp</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có lớp chính quy nào thuộc khoa này.</p>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
