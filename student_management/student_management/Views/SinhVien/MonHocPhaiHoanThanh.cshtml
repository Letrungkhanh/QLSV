@model List<student_management.Models.ViewModels.MonHocHoanThanhViewModel>

@{
    ViewData["Title"] = "Môn học phải hoàn thành";
}

<div class="container py-4">
    <h3 class="mb-4"><i class="bi bi-book"></i> Danh sách môn học phải hoàn thành</h3>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Mã môn học</th>
                <th>Tên môn học</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var mh in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@mh.MaMh</td>
                        <td>@mh.TenMh</td>
                        <td>
                            @if (mh.HoanThanh)
                            {
                                <span class="badge bg-success">Hoàn thành</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Chưa hoàn thành</span>
                            }
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Không có môn học nào.</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left me-2"></i>Quay lại
    </a>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
