@model IEnumerable<student_management.Models.ViewModels.MonHocHoanThanhViewModel>

@{
    ViewData["Title"] = "📘 Học phần CNTT";
}

<div class="container py-4">
    <h3 class="fw-bold mb-4">📘 Học phần CNTT</h3>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var mon in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@mon.TenMh</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-1"><strong>Mã môn:</strong> @mon.MaMh</p>
                            <p class="mb-1"><strong>Số tín chỉ:</strong> @mon.SoTinChi</p>
                            <p class="mb-1">
                                <strong>Hoàn thành:</strong>
                                @if (mon.HoanThanh)
                                {
                                    <span class="badge bg-success">✅ Hoàn thành</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">⚠️ Chưa hoàn thành</span>
                                }
                            </p>
                            <p class="mb-0"><strong>Lớp đang mở:</strong> @mon.LopDangMo</p>
                        </div>
                        @if (mon.LopDangMo > 0)
                        {
                            <div class="card-footer text-end">
                                <a asp-action="ChiTietMon"
                                   asp-route-maMh="@mon.MaMh"
                                   class="btn btn-primary btn-sm">
                                    Xem lớp học phần
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-emoji-neutral fs-1 mb-3"></i>
            <h5>Hiện tại không có môn CNTT nào chưa đăng ký hoặc chờ duyệt.</h5>
            <p>Hãy kiểm tra các lớp học phần đang mở để đăng ký.</p>
        </div>
    }
</div>
