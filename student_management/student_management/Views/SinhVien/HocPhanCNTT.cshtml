@model List<student_management.Models.ViewModels.LopHocPhanViewModel>

@{
    ViewData["Title"] = "Học phần CNTT chưa đăng ký";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-4">

    <h3 class="text-primary fw-bold mb-4">
        <i class="fas fa-book-open"></i> Học phần CNTT chưa đăng ký
    </h3>

    @if (!Model.Any())
    {
        <div class="alert alert-success fs-5">
            🎉 Chúc mừng! Bạn đã học hoặc đăng ký tất cả các môn thuộc CNTT rồi.
        </div>
    }
    else
    {
        <div class="row g-4">

            @foreach (var item in Model)
            {
                var chuaMo = item.TrangThai == "Chưa mở" || item.MaLhp == 0;
                var hetCho = item.SiSoHienTai >= item.SiSoToiDa && !chuaMo;

                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100 border-0" style="border-radius: 12px;">
                        <div class="card-body">

                            <h5 class="fw-bold text-primary">@item.TenMonHoc</h5>
                            <p class="text-muted mb-2">Mã môn: <b>@item.MaMh</b></p>
                            <p class="mb-2">Tín chỉ: <b>@item.SoTinChi</b></p>

                            @if (chuaMo)
                            {
                                <p class="text-danger mb-1">Chưa có lớp học phần</p>
                            }
                            else
                            {
                                <p class="mb-1">Lớp: <b>@item.TenLhp</b></p>
                                <p class="mb-1">Giảng viên: <b>@item.GiangVien</b></p>
                                <p class="mb-1">Sĩ số: <b>@item.SiSoHienTai / @item.SiSoToiDa</b></p>
                            }

                            <div class="mt-3">
                                @if (chuaMo)
                                {
                                    <span class="badge bg-secondary px-3 py-2">Chưa mở</span>
                                }
                                else if (hetCho)
                                {
                                    <span class="badge bg-danger px-3 py-2">Đã đầy</span>
                                }
                                else
                                {
                                    <span class="badge bg-success px-3 py-2">Đang mở</span>
                                }
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0 pb-4 text-center">

                            @if (chuaMo)
                            {
                                <button class="btn btn-outline-secondary w-100" disabled>Chờ mở lớp</button>
                            }
                            else if (hetCho)
                            {
                                <button class="btn btn-outline-danger w-100" disabled>Hết chỗ</button>
                            }
                            else
                            {
                                <form asp-action="DangKyHocPhan" asp-controller="SinhVien" method="post">
                                    <input type="hidden" name="maLhp" value="@item.MaLhp" />
                                    <button class="btn btn-primary w-100">
                                        <i class="fas fa-plus-circle"></i> Đăng ký
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }

        </div>
    }
</div>
