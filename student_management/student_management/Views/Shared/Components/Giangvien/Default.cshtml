@model IEnumerable<dynamic>

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center">
            <h6 class="section-title bg-white text-center text-primary px-3">Giảng viên</h6>
            <h1 class="mb-5">Đội ngũ giảng viên tiêu biểu</h1>
        </div>

        <div class="row g-4 justify-content-center">
            @foreach (var gv in Model)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item bg-light shadow-sm rounded">
                        <div class="overflow-hidden rounded-top" style="height: 320px;">
                            <img class="img-fluid w-100"
                                 src="@(string.IsNullOrEmpty(gv.Anh) ? Url.Content("~/assets/img/team-1.jpg") : Url.Content(gv.Anh))"
                                 alt="@gv.HoTen"
                                 style="object-fit: cover; width: 100%; height: 100%; object-position: center; border-radius: 10px 10px 0 0;">
                        </div>

                        <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                            <div class="bg-light d-flex justify-content-center pt-2 px-1 rounded-pill shadow-sm">
                                <a class="btn btn-sm-square btn-primary mx-1" href="#"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-sm-square btn-primary mx-1" href="#"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-sm-square btn-primary mx-1" href="#"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>

                        <div class="text-center p-4">
                            <h5 class="mb-1">@gv.HoTen</h5>
                            <small class="text-primary d-block">@gv.TenKhoa</small>
                            <small class="text-muted">@gv.Email</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
