@model student_management.Models.ViewModels.LoginViewModel

<div class="d-flex justify-content-center align-items-center vh-100" style="background: #f8f9fa;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px; border-radius: 12px;">
        <h3 class="text-center mb-4 fw-bold text-primary">Đăng nhập hệ thống</h3>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="TenDangNhap" class="form-label fw-semibold">Tên đăng nhập</label>
                <input asp-for="TenDangNhap" class="form-control form-control-lg" placeholder="Nhập tên đăng nhập" />
            </div>

            <div class="mb-3">
                <label asp-for="MatKhau" class="form-label fw-semibold">Mật khẩu</label>
                <input asp-for="MatKhau" type="password" class="form-control form-control-lg" placeholder="Nhập mật khẩu" />
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm">Đăng nhập</button>

            @if (ViewBag.Error != null)
            {
                <div class="text-danger text-center mt-3 fw-semibold">@ViewBag.Error</div>
            }
        </form>

        <div class="text-center mt-4">
            <small class="text-muted">Chưa có tài khoản? <a href="/Register" class="text-primary fw-semibold">Đăng ký ngay</a></small>
        </div>
    </div>
</div>
